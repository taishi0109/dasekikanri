<!DOCTYPE html>
<html>
  <head>
    <title>Dasekikanri</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.2/css/all.css" integrity="sha384-vSIIfh2YWi9wW0r9iZe7RJPrKwp6bG+s9QZMoITbCckVJqGCCRhc+ccxNcdpHuYu" crossorigin="anonymous">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
  </head>
  
  <body class="bg-dark">
    <div class="header-color sticky-top">
      <nav class="navbar navbar-expand-lg">
        <a class="navbar-brand" href="#"><%= link_to "打席管理", games_path %></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation" style="background-color:grey;">
          <span class="navbar-toggler-icon"><i class="fas fa-running" style="color:white;"></i></span>
        </button>        
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto">
          </ul>
          <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
        </div>
      </nav>
    </div>
    <%= yield %>
  </body>
</html>
<footer class="text-center text-white fixed-bottom" style="background-color: #21081a;">
  <div class="row">
    <div class="col-12 col-md-12">
      <%= link_to root_path do %>
        <i class="fab fa-fort-awesome" style="color:white;  padding-right:30px;" >HOME</i>
      <% end %>
      <%= link_to new_game_path do %>
        <i class="fas fa-pencil-alt" style="color:white;">試合登録</i>
      <% end %>
      <%= link_to games_path do %>
        <i class="fas fa-book-reader" style="color:white; padding-left:30px;" >結果一覧</i>
      <% end %>
    </div>
  </div>
</footer>
