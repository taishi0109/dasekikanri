<h1>成績入力</h1>
<%= link_to '成績入力','games/new' %>
  <%= form_for @game, :url => new_game_path do |f| %>
    <%= f.select :name, [["練習試合", "練習試合"], ["公式戦", "公式戦"], ["対外試合", "対外試合"]], include_blank: "選択して下さい" %>
    <%= f.submit '送信'%>
  <% end %>
<% @games.each do |game| %>
  <%= link_to game.name, game_path(game.id) %>
<% end %>